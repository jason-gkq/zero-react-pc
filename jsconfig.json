{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "compilerOptions": {
    "experimentalDecorators": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/assets/*": ["public/assets/*"],
      "@/src/*": ["src/*"],
      "@/zero": ["src/zero"],
      "@/zero/*": ["src/zero/*"],
      "@/common": ["src/common"],
      "@/common/*": ["src/common/*"]
    }
  },
  "exclude": ["node_modules", "dist", "dest"]
}
